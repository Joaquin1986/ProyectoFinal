                <footer class="footerProduct">
                    <button class="buyProductButton" id="{{_id}}" onclick="buyProductButton(event)">Comprar</button>
                </footer>
            </article>
        </div>
        {{/each}}
    </div>
    <h2 class="hProd" id="h2Total">Total: {{products.length}}</h2>
    {{else}}
